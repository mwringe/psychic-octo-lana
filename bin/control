#!/bin/bash
source $OPENSHIFT_CARTRIDGE_SDK_BASH


function start() {
    echo "Starting LiveOak cartridge"
}

function stop() {
    echo "Stopping LiveOak cartridge"
}

function restart() {
    stop
    start
}

function status() {
    echo "Status"
}

function reload() {
    client_result "Reloading LiveOak cart"
    restart
}

function tidy() {
    echo "Tidy"
}

case "$1" in
  start)     start ;;
  stop)      stop ;;
  restart)   restart ;;
  status)    status ;;
  reload)    reload ;;
  tidy)      tidy ;;
  *)         exit 0
esac
